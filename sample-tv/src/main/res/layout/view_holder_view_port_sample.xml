<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_holder_view_port_content_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:focusable="true"
    android:background="@drawable/item_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_holder_view_port_image_view_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/view_holder_view_port_text_view_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:gravity="center"
        android:lines="2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view_holder_view_port_image_view_placeholder"
        app:layout_constraintStart_toStartOf="@id/view_holder_view_port_image_view_placeholder"
        app:layout_constraintTop_toBottomOf="@id/view_holder_view_port_image_view_placeholder"
        tools:text="Lorem Ipsum Dolor Amet" />
</androidx.constraintlayout.widget.ConstraintLayout>
